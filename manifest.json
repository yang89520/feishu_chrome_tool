{
  "manifest_version": 3,
  "name": "Feishu Web Clipper",
  "version": "1.0.0",
  "description": "Save web content to Feishu documents in Markdown format",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "*://open.feishu.cn/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["turndown.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["feishu_service.js", "config.js"],
    "matches": ["<all_urls>"]
  }]
}
